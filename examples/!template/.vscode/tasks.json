{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "ZGB_PATH": "${env:ZGB_PATH}"
                }
            },
            "isBackground": false,
            "args": [
                "BUILD_TYPE=Release"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ReleaseColor",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "ZGB_PATH": "${env:ZGB_PATH}"
                }
            },
            "isBackground": false,
            "args": [
                "BUILD_TYPE=ReleaseColor"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "ZGB_PATH": "${env:ZGB_PATH}"
                }
            },
            "isBackground": false,
            "args": [
                "BUILD_TYPE=Debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "DebugColor",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "ZGB_PATH": "${env:ZGB_PATH}"
                }
            },
            "isBackground": false, 
            "args": [
                "BUILD_TYPE=DebugColor"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "ZGB_PATH": "${env:ZGB_PATH}"
                }
            },
            "isBackground": false,
            "args": [
                "BUILD_TYPE=${defaultBuildTask}",
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
